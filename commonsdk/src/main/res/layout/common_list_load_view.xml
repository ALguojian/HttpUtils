<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/common_load_more_loading_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:indeterminateDrawable="@drawable/brvah_sample_footer_loading_progress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="@string/brvah_loading"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/common_load_more_load_fail_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/brvah_load_failed"/>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/common_load_more_load_end_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:visibility="gone">

        <View
            android:layout_width="32dp"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/common_color_stroke_dark_DAD9E2"/>

        <TextView
            android:id="@+id/tvBottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我也是有底线的"
            android:textColor="@color/common_text_color_tertiary_A9A9B8"
            android:textSize="@dimen/common_text_size_small_14"/>

        <View
            android:layout_width="32dp"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/common_color_stroke_dark_DAD9E2"/>
    </LinearLayout>
</FrameLayout>