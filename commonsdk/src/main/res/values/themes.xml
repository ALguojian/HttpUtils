<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="common_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/common_color_white</item>
        <item name="colorPrimaryDark">@color/common_color_white</item>
        <item name="colorAccent">@color/common_color_primary_C3A373</item>

        <item name="android:windowBackground">@color/common_color_background_F8F7FC</item>
        <item name="android:textColorPrimary">@color/common_text_color_primary_39364D</item>
        <item name="android:textColorSecondary">@color/common_text_color_secondary_878794</item>
        <item name="android:textColorTertiary">@color/common_text_color_tertiary_A9A9B8</item>
        <item name="android:textColorHint">@color/common_text_color_hint_DAD9E2</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/common_SlideWindowAnimationStyle</item>
        <item name="android:textSize">@dimen/common_text_size_16</item>
        <item name="alertDialogStyle">@style/common_Dialog</item>
        <item name="actionBarStyle">@style/common_Toolbar</item>
        <item name="android:homeAsUpIndicator">@drawable/common_ic_home_up</item>
        <item name="homeAsUpIndicator">@drawable/common_ic_home_up</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="common_AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="common_AppTheme.FullScreen" parent="common_AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="common_AppTheme.FullScreen.Translucent" parent="common_AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="common_AppTheme.DialogActivity" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/common_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>